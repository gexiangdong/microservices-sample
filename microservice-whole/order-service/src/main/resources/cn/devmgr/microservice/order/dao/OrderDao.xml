<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.devmgr.microservice.order.dao.OrderDao" >
    <resultMap id="wholeOrderMap" type="cn.devmgr.microservice.order.domain.Order">
        <id property="id" column="id" />
        <result property="orderDate" column="orderDate" />
        <association property="consigneeAddress" javaType="cn.devmgr.microservice.order.domain.ConsigneeAddress" resultMap="orderAddress" />
        <collection property="orderItems" column="id" ofType="cn.devmgr.microservice.order.domain.OrderItem" select="selectOrderItem">
        </collection>
    </resultMap>
    <resultMap id="orderAddress" type="cn.devmgr.microservice.order.domain.ConsigneeAddress">
        <result property="consignee" column="consignee" />
        <result property="phone" column="phone" />
        <result property="province" column="province" />
        <result property="city" column="city" />
        <result property="district" column="district" />
        <result property="address" column="address" />
    </resultMap>
    
    
    <sql id="orderMainColumnsWithoutId"> consignee, phone, province, city, district, address,  orderDate, status</sql>
    <select id="getOrderById" resultMap="wholeOrderMap">
        select id, <include refid="orderMainColumnsWithoutId" />
        from order_main
        where id=#{id}
    </select>
    <select id="selectOrderItem" resultType="cn.devmgr.microservice.order.domain.OrderItem">
        select id, orderId, giftId, giftName, num, price, supplyPrice
        from order_detail
        where orderId=#{id}
    </select>
    
    <!-- 多个insert sql时，useGeneratedKeys="true" keyProperty="order.id" 不起作用，1个起作用
        selectKey会起作用
     -->
    <insert id="insertOrder" useGeneratedKeys="true" keyProperty="order.id" parameterType="cn.devmgr.microservice.order.domain.Order">
        <selectKey keyProperty="order.id" resultType="int">
            select currval(pg_get_serial_sequence('order_main', 'id'));
        </selectKey>
        insert into order_main(<include refid="orderMainColumnsWithoutId" />)
            values(#{order.consigneeAddress.consignee}, #{order.consigneeAddress.phone}, #{order.consigneeAddress.province}, 
            #{order.consigneeAddress.city}, #{order.consigneeAddress.district}, #{order.consigneeAddress.address},  #{order.orderDate}, 0);
        <foreach collection="order.orderItems" item="item" index="index" open="" separator=";"  close="">
            insert into order_detail(orderId, giftId, giftName, num, price, supplyPrice)
                values(currval(pg_get_serial_sequence('order_main', 'id')), #{item.giftId}, #{item.giftName}, #{item.num}, #{item.price}, #{item.supplyPrice});
        </foreach>
    </insert>
</mapper>